            <TextBox Name="TheTextBox" Margin="20,0,20,0" Height="30" FontFamily="Georgia" FontSize="18"/>
            <ListBox Name="Translations" Height="570"></ListBox>
        </StackPanel>
    </Canvas>
</UserControl>
